<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WherU"
        tools:targetApi="31">
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.WherU.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignInActivity"
            android:exported="true">
        </activity>
        <activity android:name=".activities.HomeActivity"
            android:exported="true">
            <!-- Generic click action -->
            <intent-filter>
                <action android:name="OPEN_REQUESTS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Open Requests -> To Me tab -->
            <intent-filter>
                <action android:name="OPEN_REQUESTS_TO_ME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Open Requests -> From Me tab -->
            <intent-filter>
                <action android:name="OPEN_REQUESTS_FROM_ME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Deep link: wheru://open?id=123&tab=to|from -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="wheru" android:host="open" />
            </intent-filter>
        </activity>
        <activity android:name="com.whereu.whereu.activities.NotificationActivity" />
        <activity android:name="com.whereu.whereu.activities.ProfileSettingsActivity" />
        <activity android:name="com.whereu.whereu.activities.PhoneVerificationActivity" />
        <activity android:name="com.whereu.whereu.activities.TrustedContactsActivity" />
        <activity android:name="com.whereu.whereu.activities.AddTrustedContactActivity" />
        <activity android:name="com.whereu.whereu.activities.TrustedContactDetailsActivity" />
        <activity android:name="com.whereu.whereu.activities.MapActivity" />
        <activity android:name="com.whereu.whereu.activities.PlansActivity"
            android:exported="false"
            android:theme="@style/Theme.WherU.NoActionBar" />

        <activity android:name="com.whereu.whereu.activities.PaymentOptionsActivity"
            android:exported="false"
            android:theme="@style/Theme.WherU.NoActionBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- AdMob App ID (Production) -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3041890013064110~1857587742" />

        <receiver android:name=".activities.NotificationActionReceiver" android:exported="false">
            <intent-filter>
                <action android:name="com.whereu.whereu.APPROVE" />
                <action android:name="com.whereu.whereu.REJECT" />
            </intent-filter>
        </receiver>

        <!-- Reschedule background polling after boot -->
        <receiver android:name=".receivers.BootCompletedReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Firebase Messaging Service to handle push notifications -->
        <service
            android:name=".services.WhereUFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
