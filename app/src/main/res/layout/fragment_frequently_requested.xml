<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FrequentlyRequestedFragment">

    <com.google.android.material.chip.Chip
        android:id="@+id/infoChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Tap on a request to view details"
        android:visibility="gone"
        app:chipBackgroundColor="@color/blue_500"
        app:chipEndPadding="12dp"
        app:chipStartPadding="12dp"
        app:textStartPadding="4dp"
        app:textEndPadding="4dp"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Chip" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/frequentlyRequestedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/emptyStateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="No frequent requests yet. Start requesting your contacts to see them here."
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone" />

</FrameLayout>